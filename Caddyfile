prof-twist.ru {
  # API -> upstream
  handle_path /api/* {
    rewrite * /api/v1{path}
    reverse_proxy traefik:80
  }
  # WebSocket proxy for /ws
  handle_path /ws/* {
    rewrite * /api/v1/chats{path}?{query}
    # Always hop to the upstream over plain WS/HTTP even if the client uses WSS
    reverse_proxy http://traefik:80 {
      transport http {
        versions 1.1
      }
      header_up X-Forwarded-Proto http
    }
  }
  # Frontend (SPA)
  handle {
    root * /usr/share/caddy
    try_files {path} {path}/ /index.html
    file_server
  }
}
